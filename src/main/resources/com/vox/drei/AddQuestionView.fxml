<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.vox.drei.AddQuestionController"
      spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <Label text="Add New Question" styleClass="title"/>
    <TextField fx:id="questionField" promptText="Enter your question"/>
    <TextField fx:id="answer1Field" promptText="Answer 1"/>
    <TextField fx:id="answer2Field" promptText="Answer 2"/>
    <TextField fx:id="answer3Field" promptText="Answer 3"/>
    <TextField fx:id="answer4Field" promptText="Answer 4"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Correct Answer:"/>
        <ComboBox fx:id="correctAnswerComboBox"/>
    </HBox>
    <Button text="Add Question" onAction="#addQuestion"/>
    <Button text="Back to Main Menu" onAction="#backToMain"/>
</VBox>